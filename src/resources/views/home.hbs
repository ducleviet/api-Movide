<div class='mt-4'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4'>
                <a href='/courses/{{this.slug}}'>
                    <div class='card' style='width: 18rem;'>
                        <img src='{{this.img}}' class='card-img-top' alt='{{this.name}}' />
                        <div class='card-body'>
                            <h5 class='card-title'>{{this.name}}</h5>
                            <p class='card-text'>{{this.descriptiom}}</p>
                            <a href='/courses/{{this._id}}/add' class='btn btn-primary'>Thêm tập cho phim</a>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</div>